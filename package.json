{
  "name": "@currentjs/element-library",
  "version": "0.1.0",
  "description": "A set of web components built with @currentjs/element",
  "main": "index.js",
  "module": "index.js",
  "repository": "https://github.com/currentjs/element-library",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "author": "@currentjs",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/elements/*",
    "packages/forms/*",
    "packages/interactions/*"
  ],
  "dependencies": {
    "@currentjs/element": "^0.1.0-2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@open-wc/demoing-storybook": "^1.13.3",
    "@open-wc/karma-esm": "^2.13.16",
    "@open-wc/semantic-dom-diff": "^0.16.0",
    "@open-wc/testing": "^2.5.6",
    "@open-wc/testing-karma": "^3.3.5",
    "autoprefixer": "^9.7.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-postcss": "^0.3.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "hygen": "^5.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "prettier": "^1.19.1",
    "rollup-plugin-postcss": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "make:element": "hygen make element",
    "lerna:publish": "lerna publish from-package",
    "storybook": "start-storybook -p 9001",
    "test": "karma start",
    "test:coverage": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  }
}
