{
    "name": "@webtides/element-library",
    "version": "0.2.0",
    "description": "A set of web components built with @webtides/element-js",
    "type": "module",
    "main": "index.js",
    "module": "index.js",
    "repository": "https://github.com/webtides/element-library",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "restricted"
    },
    "author": "@webtides",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@glidejs/glide": "3.4.1",
        "@webtides/element-js": "^1.0.0",
        "lozad": "^1.16.0"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^1.4.0",
        "@open-wc/testing": "^4.0.0",
        "@storybook/addon-a11y": "^8.1.3",
        "@storybook/addon-coverage": "^1.0.4",
        "@storybook/addon-essentials": "^8.1.3",
        "@storybook/addon-interactions": "^8.1.3",
        "@storybook/addon-links": "^8.1.3",
        "@storybook/blocks": "^8.1.3",
        "@storybook/test": "^8.1.3",
        "@storybook/web-components": "^8.1.3",
        "@storybook/web-components-vite": "^8.1.3",
        "@web/dev-server": "^0.4.1",
        "@web/test-runner": "^0.14.1",
        "autoprefixer": "^9.7.4",
        "deepmerge": "^4.2.2",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-storybook": "^0.8.0",
        "husky": "^4.3.0",
        "hygen": "^5.0.3",
        "lerna": "^3.20.2",
        "lint-staged": "^10.4.0",
        "lit": "^3.1.3",
        "postcss-import": "^12.0.1",
        "postcss-nested": "^4.2.1",
        "prettier": "^3.2.5",
        "storybook": "^8.1.3",
        "stylelint": "^13.7.1",
        "stylelint-config-standard": "^20.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "scripts": {
        "make:element": "hygen make element",
        "dev": "storybook dev -p 3000 --no-open",
        "lint": "eslint ./src/**/*.js && stylelint ./src/**/*.css",
        "lint:js": "eslint ./src/**/*.js",
        "lint:css": "stylelint ./src/**/*.css",
        "test": "web-test-runner src/**/*.test.*.{html,js} --node-resolve",
        "test:coverage": "web-test-runner src/**/*.test.*.{html,js} --node-resolve --coverage",
        "test:watch": "web-test-runner src/**/*.test.*.{html,js} --node-resolve --watch",
        "build-storybook": "storybook build"
    },
    "lint-staged": {
        "*.{js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{yaml,yml,md}": [
            "prettier --write"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    }
}
